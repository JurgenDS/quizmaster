{
    "name": "quizmaster-fe",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite --host",
        "build": "vite build",

        "code:tsc": "tsc --noEmit",
        "code:lint": "biome lint --fix",
        "code:format": "biome format --write",
        "code": "pnpm code:tsc && pnpm code:lint && pnpm code:format",

        "test:e2e": "bddgen && wait-on tcp:8080 && playwright test",
        "test:e2e:vite": "bddgen && wait-on tcp:5173 && cross-env FE_PORT=5173 playwright test",
        "test:e2e:watch": "chokidar specs/**/*.feature -c bddgen",
        "playwright:ui": "bddgen && wait-on tcp:5173 && cross-env FE_PORT=5173 playwright test --ui-host=0.0.0.0 --ui-port=3333",
        "test:e2e:ui": "concurrently 'pnpm test:e2e:watch' 'pnpm playwright:ui'",

        "coverage:clean": "rm -rf coverage",
        "coverage:test:e2e": "pnpm coverage:clean && c8 --experimental-monocart cross-env ENABLE_COVERAGE=1 pnpm test:e2e",
        "coverage:report": "node specs/coverage/report.js",

        "ci:install": "pnpm install && playwright install --with-deps",
        "ci:code": "tsc -b && biome ci",
        "ci:build": "pnpm vite build --sourcemap && cd ../backend && ./gradlew build",
        "ci:bootrun": "cd ../backend && ./gradlew bootRun",
        "ci:test:e2e": "start-server-and-test 'pnpm ci:bootrun' 8080 'pnpm test:e2e'",
        "ci:coverage": "start-server-and-test 'pnpm ci:bootrun' 8080 'pnpm coverage:test:e2e'"
    },
    "dependencies": {
        "react": "19.0.0",
        "react-dom": "19.0.0",
        "react-router-dom": "7.1.5"
    },
    "devDependencies": {
        "@biomejs/biome": "1.9.4",
        "@cucumber/cucumber": "11.1.0",
        "@playwright/test": "1.49.0",
        "@types/node": "22.10.1",
        "@types/react": "19.0.8",
        "@types/react-dom": "19.0.3",
        "@vitejs/plugin-react": "4.3.4",
        "c8": "10.1.3",
        "chokidar-cli": "3.0.0",
        "concurrently": "9.1.2",
        "cross-env": "7.0.3",
        "esbuild-register": "3.6.0",
        "monocart-coverage-reports": "2.12.6",
        "playwright-bdd": "8.2.0",
        "sass": "1.82.0",
        "start-server-and-test": "2.0.11",
        "typescript": "5.7.2",
        "vite": "6.0.2",
        "vite-tsconfig-paths": "5.1.3",
        "wait-on": "8.0.1"
    }
}
